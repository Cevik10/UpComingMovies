<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#B41729</item>
        <item name="colorPrimaryVariant">@color/app_bar_color</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D8A200</item>
        <item name="colorSecondaryVariant">#C37C00</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/app_bar_color</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="textYellow" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/yellow</item>
    </style>


    <style name="appNameStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="RatingBar" parent="Theme.MoviesApp">
        <item name="colorControlActivated">@color/color_rating_active</item>
        <item name="colorControlNormal">@color/color_rating_inactive</item>
    </style>






</resources>